{
    "compilerOptions": {
        "target": "es2020",
        // "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/packages/*"],
            "~/*": ["src/*"]
        }
    },
    "include": ["src/packages/types.d.ts", "src/**/*.ts", "src/**/*.d.ts"],
    "exclude": ["node_modules"]
}
